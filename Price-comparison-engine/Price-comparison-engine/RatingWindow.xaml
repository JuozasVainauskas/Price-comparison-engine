                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="Quality4" Height="18" Width="20" HorizontalAlignment="Left" Margin="200,12,0,0" VerticalAlignment="Top" Click="QualityStar4" Grid.Row="1">
