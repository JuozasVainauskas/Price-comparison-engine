<Window x:Class="Price_comparison_engine.PrekiuLangas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Price_comparison_engine"
        mc:Ignorable="d"
        Title="Prekės" Height="600" Width="800" SizeChanged="Window_SizeChanged" MinHeight="600" MinWidth="800">
    <Grid>
        <Rectangle x:Name="rectangle1" Fill="#FF8CD479" HorizontalAlignment="Left" Height="570" Stroke="Black" VerticalAlignment="Top" Width="188"/>
        <Rectangle x:Name="rectangle2" Fill="#FF0FA943" Height="43" Margin="188,0,-0.4,0" Stroke="Black" VerticalAlignment="Top" Width="606" HorizontalAlignment="Left"/>
        <DataGrid AutoGenerateColumns="False" Name="DataGridas" CanUserAddRows="True" ItemsSource="{Binding TestBinding}" Margin="193,219,9.6,10.4" Initialized="DataGridTest_Initialized">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Image" Width="SizeToCells"
 IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Nuotrauka}" Height="100" Name="imageClick" MouseLeftButtonDown="ImageClick_MouseLeftButtonDown"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Pardavejas" IsReadOnly="True" Binding="{Binding Path=Seller}" Width="70"></DataGridTextColumn>
                <DataGridTextColumn Header="Preke" IsReadOnly="True"  Binding="{Binding Path=Name}" Width="300"></DataGridTextColumn>
                <DataGridTextColumn Header="Kaina" IsReadOnly="True"  Binding="{Binding Path=Price}" Width="100"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Nuoroda">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="linkButton" Background="#FF36B04D" ContentStringFormat="" Click="LinkButton_Click">
                                <Hyperlink NavigateUri="{Binding Link}">
                                </Hyperlink>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Įvertinti pardavėją" HorizontalAlignment="Left" Margin="207,49,0,0" VerticalAlignment="Top" Width="119" Click="Button_Click"/>
        <WrapPanel x:Name="wrapPanel1" HorizontalAlignment="Left" Height="100" Margin="207,88,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</Window>
